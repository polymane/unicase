<plugin>
    
  <extension point="org.eclipse.emf.edit.itemProviderAdapterFactories">
    <factory
          class="org.unicase.workspace.provider.WorkspaceItemProviderAdapterFactory"
          supportedTypes="org.eclipse.emf.edit.provider.IEditingDomainItemProvider  org.eclipse.emf.edit.provider.IStructuredItemContentProvider  org.eclipse.emf.edit.provider.ITreeItemContentProvider  org.eclipse.emf.edit.provider.IItemLabelProvider   org.eclipse.emf.edit.provider.IItemPropertySource"
          uri="http://unicase.org/workspace"/>
  </extension>
  <extension
        point="org.eclipse.ui.handlers">
     <handler
           class="org.unicase.workspace.edit.commands.CommitWorkspaceHandler"
           commandId="org.unicase.workspace.edit.commitWorkspace">
     </handler>
     <handler
           class="org.unicase.workspace.edit.commands.UpdateWorkspaceHandler"
           commandId="org.unicase.workspace.edit.updateWorkspace">
     </handler>
     <handler
           class="org.unicase.workspace.edit.commands.ShareWorkspaceHandler"
           commandId="org.unicase.workspace.edit.shareWorkspace">
     </handler>
  </extension>
  <extension
        point="org.eclipse.ui.commands">
     <category
           id="org.unicase.workspace.edit.workspace"
           name="workspaceCategory">
     </category>
     <command
           categoryId="org.unicase.workspace.edit.workspace"
           id="org.unicase.workspace.edit.commitWorkspace"
           name="commitWorkspace">
     </command>
     <command
           categoryId="org.unicase.workspace.edit.workspace"
           id="org.unicase.workspace.edit.updateWorkspace"
           name="updateWorkspace">
     </command>
     <command
           categoryId="org.unicase.workspace.edit.workspace"
           id="org.unicase.workspace.edit.shareWorkspace"
           name="shareWorkspace">
     </command>
  </extension>
  <extension
        point="org.eclipse.ui.menus">
     <menuContribution
           locationURI="popup:org.unicase.ui.navigator.viewer?before=additions">
        <command
              commandId="org.unicase.workspace.edit.commitWorkspace"
              label="Commit Workspace"
              style="push">
           <visibleWhen
                 checkEnabled="false">
              <iterate>
                 <instanceof
                       value="org.unicase.workspace.ProjectSpace">
                 </instanceof>
              </iterate>
           </visibleWhen>
        </command>
        <command
              commandId="org.unicase.workspace.edit.updateWorkspace"
              label="Update Workspace"
              style="push">
           <visibleWhen
                 checkEnabled="false">
              <iterate>
                 <instanceof
                       value="org.unicase.workspace.ProjectSpace">
                 </instanceof>
              </iterate>
           </visibleWhen>
        </command>
          <command
              commandId="org.unicase.workspace.edit.shareWorkspace"
              label="Share Workspace"
              style="push">
           <visibleWhen
                 checkEnabled="false">
              <iterate>
                 <instanceof
                       value="org.unicase.workspace.ProjectSpace">
                 </instanceof>
              </iterate>
           </visibleWhen>
        </command>
        <separator
              name="org.unicase.workspace.edit.workspaceCommands"
              visible="true">
        </separator>
     </menuContribution>
  </extension>

</plugin>
