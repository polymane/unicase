<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension-point id="org.unicase.ui.validation.filters" name="The validation filter extension point" schema="schema/org.unicase.ui.validation.filter.exsd"/>
 <extension-point id="org.unicase.ui.validation.refactoring.strategies" name="Refactorings for the validation constraint violations" schema="schema/org.unicase.ui.validation.refactorings.exsd"/>
	<extension
         point="org.eclipse.ui.views">
		<view
        category="org.unicase"
        class="org.unicase.ui.validation.view.ValidationView"
        icon="icons/validation.png"
        id="org.unicase.ui.validation.validationView"
        name="Validation View"
        restorable="true">
		</view>
	</extension>
 <extension
       point="org.unicase.ui.validation.filters">
    <filter
          filter="org.unicase.ui.validation.view.filters.impl.Severity1ValidationFilter"
          name="Severity1ValidationFilter">
    </filter>
    <filter
          filter="org.unicase.ui.validation.view.filters.impl.Severity2ValidationFilter"
          name="Severity2ValidationFilter">
    </filter>
    <filter
          filter="org.unicase.ui.validation.view.filters.impl.Severity4ValidationFilter"
          name="Severity4ValidationFilter">
    </filter>
 </extension>
 <extension
       point="org.eclipse.ui.propertyPages">
    <page
          class="org.unicase.ui.validation.preferences.ValidationPropertiesPage"
          icon="icons/bell.png"
          id="org.unicase.validation.validationProperties"
          name="Validation">
       <enabledWhen>
          <iterate>
             <count
                   value="1">
             </count>
             <instanceof
                   value="org.unicase.metamodel.Project">
             </instanceof>
          </iterate>
       </enabledWhen>
    </page>
 </extension>
 <extension
       point="org.eclipse.ui.commands">
            <command
           defaultHandler="org.unicase.ui.validation.view.handlers.ValidateHandler"
           id="org.unicase.workspace.ui.validate"
           name="Validate">
     </command>
 </extension>
</plugin>


