<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.unicase.documentExport.exportDocument"
            name="exportDocument">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.unicase.documentexport.commands.ExportDocument"
            commandId="org.unicase.documentExport.exportDocument">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.unicase.ui.navigator.viewer?after=org.unicase.ui.common.commands.annotateActionitemSeperator">
         <command
               commandId="org.unicase.documentExport.exportDocument"
               label="Export Meeting"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="org.unicase.model.meeting.Meeting">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="org.unicase.documentExport.exportDocument"
               label="Export Document"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.emf.ecore.generated_package">
      <package
            class="org.unicase.documentexport.documentTemplate.DocumentTemplatePackage"
            genModel="model/documentExport.genmodel"
            uri="http://unicase.org/documentExport/documentTemplate">
      </package>
   </extension>
   <extension
         point="org.eclipse.emf.ecore.generated_package">
      <package
            class="org.unicase.documentexport.documentTemplate.renderers.RenderersPackage"
            genModel="model/documentExport.genmodel"
            uri="http://unicase.org/documentExport/documentTemplate/renderers">
      </package>
   </extension>
   <extension
         point="org.eclipse.emf.ecore.generated_package">
      <package
            class="org.unicase.documentexport.documentTemplate.renderers.defaultRenderers.DefaultRenderersPackage"
            genModel="model/documentExport.genmodel"
            uri="http://unicase.org/documentExport/documentTemplate/renderers/defaultRenderers">
      </package>
   </extension>
   <extension
         point="org.eclipse.emf.ecore.generated_package">
      <package
            class="org.unicase.documentexport.documentTemplate.renderers.specialRenderers.SpecialRenderersPackage"
            genModel="model/documentExport.genmodel"
            uri="http://unicase.org/documentExport/documentTemplate/renderers/specialRenderers">
      </package>
   </extension>
   <extension
         point="org.eclipse.emf.ecore.generated_package">
      <package
            class="org.unicase.documentexport.documentTemplate.renderers.options.OptionsPackage"
            genModel="model/documentExport.genmodel"
            uri="http://unicase.org/documentExport/documentTemplate/renderers/options">
      </package>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.unicase"
            name="unicase">
      </category>
      <view
            category="org.unicase"
            class="org.unicase.documentexport.views.DocumentTemplateManager"
            id="org.unicase.DocumentTemplateManager"
            name="Document template manager">
      </view>
   </extension>

</plugin>
