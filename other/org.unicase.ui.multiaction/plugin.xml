<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension
         point="org.eclipse.ui.startup">
      <startup></startup>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
         <command
            id="org.unicase.ui.navigator.multiactionItem"
            name="multiactionItem">
      </command>
  
  </extension>
  
   <extension
         point="org.eclipse.ui.handlers">  
            <handler
            class="org.unicase.ui.multiaction.navigator.commands.MultiactionWizardHandler"
            commandId="org.unicase.ui.navigator.multiactionItem">
     	 </handler>
     </extension>    
     
    <extension
	point="org.eclipse.ui.menus">
    <menuContribution
           locationURI="popup:org.unicase.ui.navigator.viewer?after=additions">	
       <command
	          commandId="org.unicase.ui.navigator.multiactionItem"
	          label="Multiple Asignees..."
	          style="push">
	       <visibleWhen
	             checkEnabled="false">
	          <iterate
	                ifEmpty="false">
	             <instanceof
	                   value="org.unicase.model.task.ActionItem">
	             </instanceof>
	          </iterate>
	       </visibleWhen>
    	</command>
        
     </menuContribution>

     </extension>
</plugin>
