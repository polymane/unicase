<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.unicase.client.Unicase">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.unicase.client.UnicasePerspective"
            icon="icons/unicase.png"
            id="org.unicase.client.UnicasePerspective"
            name="Unicase Perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.unicase.client.application"
            name="UNICASE">
         <property
               name="appName"
               value="UNICASE">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="aboutText"
               value="UNICASE is a CASE-Tool integrating models from the different development acitivities, such as requirements, use cases, UML models, schedules, bug and feature models into a unified model. The project is open-source and released under the Eclipse Public License v 1.0 (EPL).&#x0A;&#x0A;More details can be found at the project home-page : &#x0A;http://www.unicase.org">
         </property>
         <property
               name="aboutImage"
               value="about.png">
         </property>
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif,icons/alt_window_48.gif,icons/alt_window_64.gif,icons/alt_window_128.gif">
         </property>
         <property
               name="startupForegroundColor"
               value="FFFFFF">
         </property>
         <property
               name="startupMessageRect"
               value="20,285,460,20">
         </property>
         <property
               name="startupProgressRect"
               value="5,310,490,15">
         </property>
      </product>
   </extension>

	   <extension
	         point="org.eclipse.ui.menus">
	      <menuContribution
	            locationURI="menu:helpStart?before=about">
          <command
                commandId="org.eclipse.ui.views.showView"
                label="Show Error View"
                style="push">
             <parameter
                   name="org.eclipse.ui.views.showView.viewId"
                   value="org.eclipse.pde.runtime.LogView">
             </parameter>
          </command>
          <separator
                name="org.unicase.client.helpStartSeperator"
                visible="true">
          </separator>
	      </menuContribution>
	   </extension>

</plugin>
