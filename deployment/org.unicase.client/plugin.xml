<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.unicase.client.Unicase">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.unicase.client.UnicasePerspective"
            icon="icons/unicase.png"
            id="org.unicase.client.UnicasePerspective"
            name="Unicase Perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.unicase.client.application"
            name="UNICASE">
         <property
               name="appName"
               value="UNICASE">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="aboutText"
               value="Version: 0.4.5&#x0A;&#x0A;(c) Copyright 2008-2009 Jonas Helming, Maximilian Koegel. All rights reserved.&#x0A;This program and the accompanying materials are made available&#x0A;under the terms of the Eclipse Public License v1.0 which accompanies this&#x0A;distribution, and is available at http://www.eclipse.org/legal/epl-v10.html&#x0A;&#x0A;UNICASE client - a unified CASE-Tool.&#x0A;Visit http://www.unicase.org">
         </property>
         <property
               name="aboutImage"
               value="about.png">
         </property>
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif,icons/alt_window_48.gif,icons/alt_window_64.gif,icons/alt_window_128.gif">
         </property>
         <property
               name="startupProgressRect"
               value="5,280,527,17">
         </property>
         <property
               name="startupForegroundColor"
               value="000579">
         </property>
         <property
               name="startupMessageRect"
               value="20,252,445,20">
         </property>
      </product>
   </extension>

	   <extension
	         point="org.eclipse.ui.menus">
	      <menuContribution
	            locationURI="menu:org.eclipse.ui.main.menu">
	         <menu
	               label="Error Log">
	            <command
	                  commandId="org.eclipse.ui.views.showView"
	                  label="Show Error View"
	                  style="push">
	               <parameter
	                     name="org.eclipse.ui.views.showView.viewId"
	                     value="org.eclipse.pde.runtime.LogView">
	               </parameter>
	            </command>
	         </menu>
	      </menuContribution>
	   </extension>

</plugin>
