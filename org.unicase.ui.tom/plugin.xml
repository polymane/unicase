<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.unicase.ui.navigator.viewer?after=org.unicase.ui.common.commands.annotateActionItemSeperator">
         <command
               commandId="org.unicase.ui.touchtable.newTOMWindow"
               label="Open in new TOM window..."
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate>
                  <instanceof
                        value="org.unicase.model.diagram.MEDiagram">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.unicase.ui.navigator.viewer?after=org.unicase.ui.common.commands.annotateActionItemSeperator">
         <command
               commandId="org.unicase.ui.touchtable.showMultitouchOverlay"
               label="Show multi-touch overlay..."
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate>
                  <instanceof
                        value="org.unicase.model.diagram.MEDiagram">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.unicase.ui.navigator.viewer?after=org.unicase.ui.common.commands.annotateActionItemSeperator">
         <command
               commandId="org.unicase.ui.touchtable.debug"
               label="Debug"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate>
                  <instanceof
                        value="org.unicase.model.diagram.MEDiagram">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.unicase.ui.tom.commands.NewTOMWindowHandler"
            id="org.unicase.ui.touchtable.newTOMWindow"
            name="New TOM Window">
      </command>
      <command
            defaultHandler="org.unicase.ui.tom.commands.ShowMultiTouchOverlayHandler"
            id="org.unicase.ui.touchtable.showMultitouchOverlay"
            name="Show multi-touch overlay">
      </command>
      <command
            defaultHandler="org.unicase.ui.tom.commands.DebugHandler"
            id="org.unicase.ui.touchtable.debug"
            name="Debug">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.unicase.ui.tom.perspectives.MultitouchPerspective"
            icon="icons/releng_gears.gif"
            id="org.unicase.ui.touchtable.perspectives.MultitouchPerspective"
            name="Multi Touch Diagram Editing">
      </perspective>
   </extension>

</plugin>
