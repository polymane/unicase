<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.unicase.implementation.ui.command.ExtractSuperClass"
            name="Extract Super Class">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.unicase.ui.implementation.ExtractSuperClassHandler"
            commandId="org.unicase.implementation.ui.command.ExtractSuperClass">
         <activeWhen>
            <with
                  variable="selection">
               <iterate>
                  <adapt
                        type="org.unicase.model.implementation.IClass">
                  </adapt>
               </iterate>
               <count
                     value="+">
               </count>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.unicase.ui.navigator.viewer?before=additions">
         <command
               commandId="org.unicase.implementation.ui.command.ExtractSuperClass"
               label="Extract Super Class"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
