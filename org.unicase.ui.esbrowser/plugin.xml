<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="currentProject" name="Current Project" schema="schema/currentProject.exsd"/>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="unicase"
            id="org.unicase">
      </category>
      <view
            name="EmfStore Browser"
            icon="icons/sample.gif"
            category="org.unicase"
            class="org.unicase.ui.esbrowser.views.RepositoryView"
            id="org.unicase.ui.repository.views.RepositoryView">
      </view>
      <view
            category="org.unicase"
            class="org.unicase.ui.esbrowser.views.orgunit.OrgUnitManagementView"
            id="org.unicase.ui.esbrowser.OrgUnitManagementView"
            name="User-Group Management"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.unicase.ui.repository.views.RepositoryView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   

</plugin>
