<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
     <extension
         point="org.eclipse.ui.views">
      <category
            name="unicase"
            id="org.unicase">
      </category>
      <view
            category="org.unicase"
            class="org.unicase.ui.navigator.TreeView"
            icon="icons/unicase.png"
            id="org.unicase.ui.navigator.viewer"
            name="Unicase Navigator"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.unicase.ui.navigator.commands.CreateMEHandler"
            description="This generic command is used to by dynamic commands to create different MEs"
            id="org.unicase.ui.navigator.createME"
            name="New Model Element">
         <commandParameter
               id="org.unicase.ui.navigator.eClassParameter"
               name="eClassParameter"
               optional="true"
               typeId="org.unicase.ui.navigator.eClassType">
         </commandParameter>
      </command>
      <command
            id="org.unicase.ui.navigator.newMEWizard"
            name="New ModelElement Wizard">
      </command>
      <commandParameterType
            converter="org.unicase.ui.navigator.commands.EClassTypeConverter"
            id="org.unicase.ui.navigator.eClassType"
            type="org.eclipse.emf.ecore.EClass">
      </commandParameterType>
      <command
            id="org.unicase.ui.navigator.newLeafSection"
            name="newLeafSection">
      </command>
      <command
            id="org.unicase.ui.navigator.newCompositeSection"
            name="newCompositeSection">
      </command>
   </extension>
    <!--    -->
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
         locationURI="popup:org.unicase.ui.navigator.viewer?after=org.unicase.ui.common.commands.annotateActionItemSeperator">
         <command
               commandId="org.unicase.ui.navigator.newMEWizard"
               label="New model element..."
               style="push">
          <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="org.unicase.model.document.LeafSection">
                  </instanceof>
               </iterate>
            </visibleWhen> 
         </command>
         <command
               commandId="org.unicase.ui.navigator.newCompositeSection"
               icon="icons/CompositeSection.gif"
               label="New composite section"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="org.unicase.model.document.CompositeSection">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="org.unicase.ui.navigator.newLeafSection"
               icon="icons/LeafSection.gif"
               label="New leaf section"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="org.unicase.model.document.CompositeSection">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
         locationURI="popup:org.unicase.ui.navigator.viewer?after=org.unicase.ui.common.commands.annotateActionItemSeperator">
         <dynamic
               class="org.unicase.ui.navigator.commands.DynamicMECreationCommands"
               id="org.unicase.ui.navigator.dynamicMECreationCommands">
        <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="org.unicase.model.document.LeafSection">
                  </instanceof>
               </iterate>
            </visibleWhen> 
         </dynamic>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.unicase.ui.navigator.commands.NewModelElementWizardHandler"
            commandId="org.unicase.ui.navigator.newMEWizard">
      </handler>
      <handler
            class="org.unicase.ui.navigator.commands.NewLeafSection"
            commandId="org.unicase.ui.navigator.newLeafSection">
      </handler>
      <handler
            class="org.unicase.ui.navigator.commands.NewCompositeSectionHandler"
            commandId="org.unicase.ui.navigator.newCompositeSection">
      </handler>
   </extension>
  
</plugin>
