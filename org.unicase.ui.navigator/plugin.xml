<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
     <extension
         point="org.eclipse.ui.views">
      <category
            name="unicase"
            id="org.unicase">
      </category>
      <view
            category="org.unicase"
            class="org.unicase.ui.navigator.TreeView"
            icon="icons/unicase.png"
            id="org.unicase.ui.navigator.viewer"
            name="Navigator">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="left"
               id="org.unicase.ui.navigator.viewer">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            contentProvider="org.unicase.ui.navigator.TreeContentProvider"
            id="org.unicase.ui.navigator.navigatorContent"
            labelProvider="org.unicase.ui.navigator.LabelProvider"
            name="Unicase Content">
         <triggerPoints>
            <instanceof
                  value="org.eclipse.emf.ecore.EObject">
            </instanceof>
         </triggerPoints>
         <possibleChildren>
            <instanceof
                  value="org.eclipse.emf.ecore.EObject">
            </instanceof>
         </possibleChildren>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="org.unicase.ui.navigator.viewer">
      </viewer>
      <viewerContentBinding
            viewerId="org.unicase.ui.navigator.viewer">
         <includes>
            <contentExtension
                  pattern="org.unicase.ui.navigator.navigatorContent">
            </contentExtension></includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.unicase.ui.navigator.AddNewModelElement"
            name="Add New ModelElement">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.unicase.ui.navigator.viewer?after=org.unicase.model.edit.worksapceCommands">
         <command
               commandId="org.unicase.ui.navigator.AddNewModelElement"
               label="Add new model element..."
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate>
                  <instanceof
                        value="org.unicase.model.document.LeafSection">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.unicase.ui.navigator.commands.AddNewModelElementHandler"
            commandId="org.unicase.ui.navigator.AddNewModelElement">
      </handler>
   </extension>
  
</plugin>
