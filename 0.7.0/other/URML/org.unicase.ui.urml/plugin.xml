<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.unicase"
            class="org.unicase.ui.urml.hypergraph.HypergraphView"
            icon="icons/chart_line.png"
            id="org.unicase.ui.urml.hypergraph.HypergraphView"
            name="Hypergraph View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.unicase.ui.urml.hypergraph.ShowHypergraphView"
            name="ShowHypergraphView">
      </command>
      <command
            id="org.unicase.ui.urml.hypergraph.ShowInNavigator"
            name="ShowInNavigator">
      </command>
      <command
            id="org.unicase.ui.urml.hypergraph.ShowInMEDiagram"
            name="ShowInMEDiagram">
      </command>
      <command
            id="org.unicase.ui.urml.hypergraph.ShowInMEEditor"
            name="ShowInMEEditor">
      </command>
      <command
            id="org.unicase.ui.urml.hypergraph.AutoRefresh"
            name="AutoRefresh">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.unicase.ui.urml.hypergraph.handler.ShowHypergraphViewHandler"
            commandId="org.unicase.ui.urml.hypergraph.ShowHypergraphView">
      </handler>
      <handler
            class="org.unicase.ui.urml.hypergraph.handler.ShowInNavigatorHandler"
            commandId="org.unicase.ui.urml.hypergraph.ShowInNavigator">
      </handler>
      <handler
            class="org.unicase.ui.urml.hypergraph.handler.ShowInMEEditorHandler"
            commandId="org.unicase.ui.urml.hypergraph.ShowInMEEditor">
      </handler>
      <handler
            class="org.unicase.ui.urml.hypergraph.handler.ShowInMEDiagramHandler"
            commandId="org.unicase.ui.urml.hypergraph.ShowInMEDiagram">
      </handler>
      <handler
            class="org.unicase.ui.urml.hypergraph.handler.AutoRefreshHandler"
            commandId="org.unicase.ui.urml.hypergraph.AutoRefresh">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="org.unicase.ui.urml.hypergraph.ShowHypergraphView"
               icon="icons/chart_line.png"
               label="Show Hypergraph"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.unicase.ui.urml.hypergraph.HypergraphView">
         <command
               commandId="org.unicase.ui.urml.hypergraph.ShowInNavigator"
               icon="icons/arrow_right.png"
               label="Show in Navigator"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.unicase.ui.urml.hypergraph.SelectionCheck">
               </reference>
            </visibleWhen>
         </command>
         <command
               commandId="org.unicase.ui.urml.hypergraph.ShowInMEEditor"
               icon="icons/arrow_right.png"
               label="Show in MEEditor"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.unicase.ui.urml.hypergraph.SelectionCheck">
               </reference>
            </visibleWhen>
         </command>
         <command
               commandId="org.unicase.ui.urml.hypergraph.ShowInMEDiagram"
               icon="icons/arrow_right.png"
               label="Show in MEDiagram"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.unicase.ui.urml.hypergraph.SelectionCheck">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.unicase.ui.urml.hypergraph.HypergraphView">
         <command
               commandId="org.unicase.ui.urml.hypergraph.AutoRefresh"
               icon="icons/link_with_editor.gif"
               label="Auto-Refresh"
               style="toggle"
               tooltip="Auto refresh content.">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.unicase.ui.urml.hypergraph.SelectionCheck">
         <with
               variable="activeMenuSelection">
            <count
                  value="1">
            </count>
         </with>
      </definition>
   </extension>


</plugin>
