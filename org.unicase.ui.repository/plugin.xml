<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="unicase"
            id="org.unicase.ui.repository">
      </category>
      <view
            name="Project Repositories"
            icon="icons/sample.gif"
            category="org.unicase.ui.repository"
            class="org.unicase.ui.repository.views.RepositoryView"
            id="org.unicase.ui.repository.views.RepositoryView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.unicase.ui.repository.views.RepositoryView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
