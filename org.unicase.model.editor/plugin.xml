<plugin>


  <extension
    point = "org.eclipse.ui.newWizards">
    <category
      id = "org.eclipse.emf.ecore.Wizard.category.ID"
      name="%_UI_Wizard_category">
    </category>
    <wizard
      id = "org.unicase.model.presentation.ModelModelWizardID"
      name = "%_UI_ModelModelWizard_label"
      class = "org.unicase.model.presentation.ModelModelWizard"
      category = "org.eclipse.emf.ecore.Wizard.category.ID"
      icon = "icons/full/obj16/ModelModelFile.gif">
      <description>%_UI_ModelModelWizard_description</description>
      <selection class = "org.eclipse.core.resources.IResource" />
    </wizard>
  </extension>

  <extension point = "org.eclipse.ui.editors">
    <editor
        id = "org.unicase.model.presentation.ModelEditorID"
        name = "%_UI_ModelEditor_label"
        icon = "icons/full/obj16/ModelModelFile.gif"
        extensions = "model"
        class = "org.unicase.model.presentation.ModelEditor" 
        contributorClass="org.unicase.model.presentation.ModelActionBarContributor" >
    </editor>
  </extension>    
</plugin>
